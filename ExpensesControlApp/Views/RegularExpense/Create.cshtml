@using ExpensesControlApp.Helpers
@{
    ViewData["Title"] = "Add Regular Expense";
}

@model ExpensesControlApp.ViewModels.RegExpViewModel
<div class="container col-10">
    <form id="form" method="post">
        <div class="border p-3 form-group">
            <div class="row">
                <h2 class="text-black-50 pl-3">Add Regular Expense</h2>
            </div>
            <div class="row">
                <div class="d-flex flex-column align-items-center">
                    <div class="col my-2">
                        <partial name="_ExpenseInput" for="Expense"/>
                        <partial name="_TimeSpanInput" for=TimeSpan/>
                        
                    </div>
                    <div class="col">
                        <input id="submit" type="submit" class="btn btn-outline-success m-2" asp-action="Create" value="Create" />

                        <a class="btn btn-outline-danger m-2" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>
@section MyScripts {
<script>
    validateForm();
</script>
}

