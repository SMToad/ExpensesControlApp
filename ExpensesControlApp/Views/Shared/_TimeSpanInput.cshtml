@using ExpensesControlApp.Helpers
@model TimeOption

    <div class="input-group">
        <div class="input-group-prepend w-25">
            <span class="input-group-text w-100" id="addon-timespan">Span</span>
        </div>
        @*<input id="timespan-input" name="TimeSpan" class="form-control" aria-describedby="addon-timespan" hidden>*@
        
        <input type="radio" name="TimeSpan" class="btn-check" value="0" id="time-option1" autocomplete="off">
        <label class="btn btn-outline-secondary" for="time-option1">@TimeOption.Weekly</label>
        <input type="radio" name="TimeSpan" class="btn-check" value="1" id="time-option2" autocomplete="off">
        <label class="btn btn-outline-secondary" for="time-option2">@TimeOption.Monthly</label>

    </div>
