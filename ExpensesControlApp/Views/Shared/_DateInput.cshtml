@model ExpensesControlApp.Models.ExpenseEntry
<div class="col-5">
    <div class="input-group">
        <div class="col-3 input-group-prepend">
            <span class="input-group-text" id="addon-date">Date</span>
        </div>
        <input id="datepicker" class="form-control" aria-describedby="addon-date">
        <input id="dateinput" asp-for="Date" name="Date" class="form-control" aria-describedby="addon-date" hidden>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
</div>

