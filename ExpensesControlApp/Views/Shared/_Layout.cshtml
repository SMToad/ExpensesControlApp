<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpensesControlApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpensesControlApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css"/>
    <link rel="stylesheet" href="~/lib/jqueryui/jquery-ui.min.css"/>
    
    
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            
                <div class="d-flex flex-row justify-content-around w-100 px-5" >
                    <ul class="navbar-nav">
                        <li class="nav-item px-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Expense" asp-action="Index">Manage Expenses</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Expense" asp-action="Index">Manage Templates</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LimitParam" asp-action="Index">Manage Limit</a>
                        </li>
                    </ul>
                    <div class="nav-item px-2 ml-auto mr-o" style="margin-left: auto; margin-right: 0;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
                        </div>
                </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="border-top footer text-muted text-right" >
       <div class="container" style="text-align: right;">
            <p>&copy; 2022 - ExpensesControlApp</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("MyScripts", required: false)
</body>
</html>
