@using ExpensesControlApp.Helpers
@{
    ViewData["Title"] = "Limit";
}

@model ExpensesControlApp.ViewModels.LimitParam
<div class="container col-10">
    <form id="form" method="post" asp-action="Save">
        <div class="border p-3 form-group">
            <div class="row">
                <h2 class="text-black-50 pl-3">Set Limit</h2>
            </div>
            <div class="row">
                <div class="d-flex flex-column align-items-center">
                    <div class="col my-2">
                        <div class="input-group">
                            <div class="input-group-prepend w-25">
                                <span class="input-group-text w-100" id="addon-amount">Amount</span>
                            </div>
                            <input asp-for="Amount" name="Amount" class="form-control" aria-describedby="addon-amount">
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <partial name="_TimeSpanInput" for="TimeSpan" />
                    </div>
                    <div class="col">
                        <input id="submit" type="submit" class="btn btn-outline-success m-2" value="Save" />

                        <a class="btn btn-outline-danger m-2" asp-controller="ExpenseManager" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>
@section MyScripts {
<script>

    $('input[name="timespan"]').click(function(){
        $("#timespan-input").val($('input[name="timespan"]:checked').val());
    });
    $(document).ready(function(){
        $(".checked").prop("checked", true);
    });
</script>

}

