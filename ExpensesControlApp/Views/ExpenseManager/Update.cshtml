@{
    ViewData["Title"] = "Update Expense";
}

@model ExpensesControlApp.Models.ExpenseEntry

<form method="post" asp-action="Update">
    <input asp-for="EntryId" hidden />
    <div class="border p-3 form-group">
        <div class="row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>
        <div class="d-flex flex-column align-items-center">
            <input asp-for="ExpenseId" hidden />
            <partial name="_ExpenseInput" for=Expense />
            <partial name="_DateInput" for=@Model />
        </div>
        <div class="row my-4">
            <div class="col-4 offset-4 row text-center">
                <div class="col">
                    <input id="submit" type="submit" class="btn btn-outline-success w-50" value="Update" />
                </div>
                <div class="col">
                    <a class="btn btn-outline-danger w-50" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section MyScripts {
<script>

    $(document).ready(function(){
        $("#datepicker").datepicker({
            dateFormat: "dd.mm.yy",
            firstDay: 1
        });
        let date = $("#dateinput").val().split("-").reverse().join(".");
        $("#datepicker").val(date);
    });
    $("#submit").click(function(){
        let date = $("#datepicker").val().split(".").reverse().join("-");
        $("#dateinput").val(date);
    });
</script>
}
